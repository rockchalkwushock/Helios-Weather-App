{
  "name": "helios-weather-app",
  "version": "1.0.0",
  "description": "Thinkful Capstone #3: Weather App using OpenWeatherMap API &amp; React Framework",
  "main": "src/client.js",
  "scripts": {
    "test": "mocha --compilers js:babel-register test/**/*.js*",
    "start": "npm run build && npm run server",
    "start-dev": "npm run build && npm run dev",
    "babel-node": "babel-node",
    "server": "babel-node src/server.js",
    "local": "nodemon --exec babel-node src/server.js",
    "dev": "webpack-dev-server --inline --hot --content-base build --history-api-fallback",
    "mkdir": "mkdir -p build",
    "build": "npm run clean && npm run mkdir && npm run build:html && npm run build:css && npm run build:js",
    "watch": "npm run watch:html & npm run watch:css npm run watch:js",
    "clean": "rm -rf build",
    "build:html": "npm run clean:html && cp public/index.html build/",
    "watch:html": "npm run build:html && chokidar public/index.html -c 'npm run build:html'",
    "clean:html": "rm -f build/index.html",
    "build:css": "npm run build:css:unminified && npm run build:css:minified",
    "watch:css": "npm run watch:css:unminified & npm run watch:css:minified",
    "clean:css": "npm run clean:css:unminified && npm run clean:css:minified",
    "build:css:unminified": "npm run clean:css:unminified && lessc --source-map public/styles.less build/$npm_package_name.$npm_package_version.css",
    "watch:css:unminified": "npm run build:css:unminified && chokidar 'public/**/*.(css|less)' -c 'npm run build:css:unminified'",
    "clean:css:unminified": "rm -f build/$npm_package_name.$npm_package_version.css build/$npm_package_name.$npm_package_version.css.map",
    "build:css:minified": "npm run clean:css:minified && lessc --clean-css --source-map public/styles.less build/$npm_package_name.$npm_package_version.min.css",
    "watch:css:minified": "npm run build:css:minified && chokidar 'public/**/*.(css|less)' -c 'npm run build:css:minified'",
    "clean:css:minified": "rm -f build/$npm_package_name.$npm_package_version.min.css build/$npm_package_name.$npm_package_version.min.css.map",
    "build:js": "npm run clean:js && webpack",
    "watch:js": "npm run build:js && webpack --watch",
    "clean:js": "rm -f build/$npm_package_name.$npm_package_version.js build/$npm_package_name.$npm_package_version.js.map"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rockchalkwushock/Helios-Weather-App.git"
  },
  "keywords": [
    "express",
    "OpenWeatherMap",
    "react",
    "react-router",
    "redux",
    "react-redux",
    "react-dom"
  ],
  "author": "Cody Brunner <rockchalkwushock@icloud.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/rockchalkwushock/Helios-Weather-App/issues"
  },
  "homepage": "https://github.com/rockchalkwushock/Helios-Weather-App#readme",
  "dependencies": {
    "axios": "^0.15.2",
    "express": "^4.14.0",
    "lodash": "^4.16.4",
    "react": "^15.3.2",
    "react-dom": "^15.3.2",
    "react-loading": "0.0.9",
    "react-redux": "^4.4.5",
    "react-router": "^2.8.1",
    "redux": "^3.6.0",
    "redux-promise": "^0.5.3",
    "redux-promise-middleware": "^4.1.0"
  },
  "babel": {
    "presets": [
      "es2015",
      "react",
      "stage-0"
    ]
  },
  "devDependencies": {
    "babel-core": "^6.17.0",
    "babel-eslint": "^7.1.1",
    "babel-loader": "^6.2.5",
    "babel-preset-es2015": "^6.16.0",
    "babel-preset-react": "^6.16.0",
    "babel-preset-stage-0": "^6.16.0",
    "babel-register": "^6.16.3",
    "chai": "^3.5.0",
    "chokidar-cli": "^1.2.0",
    "enzyme": "^2.5.1",
    "eslint": "^3.11.1",
    "eslint-config-rallycoding": "^3.1.0",
    "less": "^2.7.1",
    "less-plugin-clean-css": "^1.5.1",
    "mocha": "^3.1.2",
    "nodemon": "^1.11.0",
    "react-addons-test-utils": "^15.3.2",
    "react-router-redux": "^4.0.7",
    "redux-logger": "^2.7.0",
    "webpack": "^1.13.2",
    "webpack-dev-server": "^1.16.2"
  }
}
